<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.martin.kanadiasuitetabs.MainActivity$PlaceholderFragment">

    <TextView
        android:text="Altitude Min:"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/editmaxalt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Speed Min:"
        android:textSize="25dp"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editminalt"
        android:layout_marginTop="23dp"
        android:text="Speed Max:"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Altitude Max:"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editmaxalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_toRightOf="@+id/textView"
        android:ems="3"
        android:inputType="number"
        android:text="4000"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/editminalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editmaxalt"
        android:layout_alignStart="@+id/editmaxalt"
        android:layout_alignTop="@+id/textView"
        android:ems="3"
        android:inputType="number"
        android:text="1200" />

    <EditText
        android:id="@+id/editmaxspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editminalt"
        android:layout_alignStart="@+id/editminalt"
        android:layout_alignTop="@+id/textView11"
        android:ems="3"
        android:inputType="number"
        android:text="800" />

    <EditText
        android:id="@+id/editminspeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editmaxspeed"
        android:layout_alignStart="@+id/editmaxspeed"
        android:layout_alignTop="@+id/textView9"
        android:ems="3"
        android:inputType="number"
        android:text="100" />

</RelativeLayout>
